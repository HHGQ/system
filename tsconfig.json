{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true, // 启用所有严格类型检查选项。
    // "noImplicitAny": true, // 在表达式和声明上有隐含的 any类型时报错
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jest"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
, "src/main-config.js", "src/main-config.js"  ],
  "exclude": [
    "node_modules"
  ]
}
